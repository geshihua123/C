#define _CRT_SECURE_NO_WARNINGS 1

#include<stdio.h>

int main()
{
	int a = 0;//int占4个字节，32bit位，00000000000000000000000000000000
	int b = ~a;//~是对一个二进制数按位取反，11111111111111111111111111111111
	//数值在内存中是以补码的形式存储的，正整数的补码与原码相同，负数的补码是原码按位取反再加1
	//最左边一位表示符号，0为正，1为负
	printf("%d\n", b);//打印出来的是原码，原码符号位不变按位取反+1=补码，
	//补码-1再符号位不变按位取反
	//11111111111111111111111111111111减1
	//11111111111111111111111111111110符号位不变按位取反
	//10000000000000000000000000000001转为十进制为-1

	int c = 18;//00000000000000000000000000010010
	int d = ~c;//11111111111111111111111111101101补码
	//补码-1		 11111111111111111111111111101100符号位不变按位取反
	//			 10000000000000000000000000010011转为十进制为-19	
	printf("%d\n", d);

	int e = 10;
	int f = e++;//后置++，先使用，再+1
	printf("e=%d f=%d\n", e, f);//e=11,f=10

	int g = 10;
	int h = ++g;//前置++，先+1，再使用
	printf("g=%d h=%d\n", g, h);//g=11,h=11

	int i = 10;
	int j = i--;//后置--，先使用，再-1
	printf("i=%d j=%d\n", i, j);//i=9,j=10

	int k = 10;
	int l = --k;//前置--，先-1，再使用
	printf("k=%d l=%d\n", k, l);//k=9,l=9

	int m = (int)3.1415926;//将double强制转换为int，一般不要用这个！
	printf("m=%d\n", m);

	int o = 3;//0为假，非0为真，3为真
	int q = 5;//5为真
	int r = 0;//0为假
	int s = 0;
	
	int t = o && q;//真&&真为真
	printf("t=%d\n", t);//输出1
	
	int u = o && r;//真&&假为假
	printf("u=%d\n", u);//输出0
	
	int v = r && s;//假&&假为假
	printf("v=%d\n", v);//输出0
	
	int w = o || q;//真||真为真
	printf("w=%d\n", w);//输出1
	
	int x = o || r;//真||假为假
	printf("x=%d\n", x);//输出1
	
	int y = r || s;//假||假为假
	printf("y=%d\n", y);//输出0
	
	int max = 0;
	max = (o > q ? o : q);//条件操作符，如果o>q为真输出o，a>b为假输出q
	printf("%d\n", max);

	return 0;
}
