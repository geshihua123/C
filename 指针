#define _CRT_SECURE_NO_WARNINGS 1

#include<stdio.h>
//指针变量
int main()
{
	int a = 10;//a占用4字节的空间
	printf("%p\n", &a);//&为取地址操作符，&a是取a存放的地址
	int *p = &a;//a的地址赋值给p，p的类型为int*
	printf("%p\n", p);//输出的p与&a相同，都是a存放的地址
	*p = 20;//*为解引用操作符，将20赋值给p代表的地址所存放的内容，就是将20赋值给a
	printf("a=%d\n", a);//输出a=20
	return 0;
}
